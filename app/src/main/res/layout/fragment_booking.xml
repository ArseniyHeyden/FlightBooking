<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_title"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Бронирование билета"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/route_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_example"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Москва → Сочи"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/airline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/airline_example"
                    android:textSize="16sp"
                    tools:text="Аэрофлот"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/duration_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duration_example"
                    android:textSize="14sp"
                    tools:text="2ч 20м"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/departure_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure_date_example"
                    android:textSize="14sp"
                    tools:text="Вылет: 15.12.2024" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <CheckBox
            android:id="@+id/return_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_return"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/return_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_return_date"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/return_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_date_example"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Возврат: 20.12.2024"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passenger_info"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/passenger_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passenger_name_hint"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/passenger_document_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passenger_document_hint"
            android:inputType="text"
            android:autofillHints="postalCode"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <!-- Контейнер для дополнительных пассажиров -->
        <LinearLayout
            android:id="@+id/passengers_extra_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seat_class_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/seat_class_spinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/discount_level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_level_example"
            android:textSize="14sp"
            tools:text="Ваш уровень: Бронза"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/selected_seat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Место не выбрано"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/select_seat_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать место в самолете"
            android:textSize="14sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_example"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            tools:text="5500 ₽"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/book_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/book_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/primary"
            android:elevation="4dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>
</ScrollView>
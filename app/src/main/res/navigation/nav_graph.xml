<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.flightbooking.ui.LoginFragment"
        android:label="Вход">
        <action
            android:id="@+id/action_login_to_search"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.flightbooking.ui.RegisterFragment"
        android:label="Регистрация">
        <action
            android:id="@+id/action_register_to_search"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.flightbooking.ui.SearchFragment"
        android:label="Поиск">
        <action
            android:id="@+id/action_search_to_booking"
            app:destination="@id/bookingFragment" />
        <action
            android:id="@+id/action_search_to_passengerPreferences"
            app:destination="@id/passengerPreferencesFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.example.flightbooking.ui.BookingFragment"
        android:label="Бронирование">
        <action
            android:id="@+id/action_booking_to_seat_selection"
            app:destination="@id/seatSelectionFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/seatSelectionFragment"
        android:name="com.example.flightbooking.ui.SeatSelectionFragment"
        android:label="Выбор места" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.flightbooking.ui.ProfileFragment"
        android:label="Профиль" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.flightbooking.ui.FavoritesFragment"
        android:label="Избранное">
        <action
            android:id="@+id/action_favorites_to_booking"
            app:destination="@id/bookingFragment" />
    </fragment>

    <fragment
        android:id="@+id/passengerPreferencesFragment"
        android:name="com.example.flightbooking.ui.PassengerPreferencesFragment"
        android:label="Пассажиры" />
</navigation>